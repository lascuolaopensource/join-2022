{
  "kind": "collectionType",
  "collectionName": "billing_data_people",
  "info": {
    "singularName": "billing-data-person",
    "pluralName": "billing-data-people",
    "displayName": "Billing Data – Person",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "surname": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "location.address"
    },
    "fiscalCode": {
      "type": "string",
      "regex": "^[a-zA-Z]{6}[0-9]{2}[abcdehlmprstABCDEHLMPRST]{1}[0-9]{2}([a-zA-Z]{1}[0-9]{3})[a-zA-Z]{1}$",
      "required": true,
      "unique": true
    },
    "email": {
      "type": "string",
      "required": true
    }
  }
}
